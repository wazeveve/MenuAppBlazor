@using MenuAppBlazor.Models;


<div class="col-12 col-md-6 text-center my-2">
    <div>
        <h4>@Dish.Name</h4>
    </div>
    <div>
        <img alt="@Dish.Name" src="@Dish.ImageUrl" style="width: 260px; height: 250px" />
    </div>
    <div>
       Price: $ @Dish.Price.ToString("N2") 
    </div>
    <div>
        <a class="btn btn-info" href="@($"details/{Dish.Id}")">View Dish</a>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Dish Dish { get; set; } = default!;
}
